<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Covid-19 Tracker</title>
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <link
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      rel="stylesheet"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/style.css" />
  </head>

  <body>
    <section class="text-light bg-dark jumbotron jumbotron-fluid">
      <div class="container">
        <h5 class="float-left text-center">
          <span class="text-success">NIGERIA</span> COVID-19
          <span class="text-success">TRACKER</span>
        </h5>
      </div>
    </section>

    <main class="container" id="home">
      <!-- Nigeria Section -->
      <section class="row mt-5">
        <div class="col-sm-12">
          <div class="card mb-3">
            <div class="card-header nigeria text-white bg-dark">Nigeria</div>
            <div class="card-body row">
              <div class="col-sm-6 col-lg-3 mt-3 mb-3">
                <div class="card text-dark border-button">
                  <p
                    class="nigeria_confirmed_cases card-text text-primary font-m ma-10"
                  >
                    <%= data.totalConfirmedCases %>
                  </p>
                  <h6 class="card-title ma-10">Cases Till Date</h6>
                </div>
              </div>

              <div class="col-sm-6 col-lg-3 mt-3 mb-3">
                <div class="card text-dark border-button">
                  <p
                    class="nigeria_active_cases card-text text-warning font-m ma-10"
                  >
                    <%= data.totalActiveCases %>
                  </p>
                  <h6 class="card-title ma-10">Active Cases</h6>
                </div>
              </div>

              <div class="col-sm-6 col-lg-3 mt-3 mb-3">
                <div class="card text-dark border-button">
                  <p
                    class="nigeria_discharged_cases card-text text-success font-m ma-10"
                  >
                    <%= data.discharged %>
                  </p>
                  <h6 class="card-title ma-10">Recovered Cases</h6>
                </div>
              </div>

              <div class="col-sm-6 col-lg-3 mt-3 mb-3">
                <div class="card text-dark border-button">
                  <p
                    class="nigeria_death_cases card-text text-danger font-m ma-10"
                  >
                    <%= data.death %>
                  </p>
                  <h6 class="card-title ma-10">Deaths</h6>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Chart section -->
      <section class="mt-5 card">
        <canvas id="myChart" width="800" height="400"></canvas>
      </section>

      <!-- search section -->
      <section class="row mt-5">
        <div class="input-group mb-3 md-form mt-0 col-sm-12">
          <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon1">Search</span>
          </div>
          <input
            type="text"
            class="form-control"
            placeholder="by state name"
            id="filter"
            name="filter"
            aria-label="state name"
            aria-describedby="basic-addon1"
          />
        </div>
      </section>

      <!-- states section -->
      <section class="row mt-5" id="states">
        <% data.states.forEach((eachState) => { %>
        <div class="col-sm-6 states-collection">
          <div class="card mb-3 text-white border border-light rounded">
            <div class="card-header text-white bg-dark">
              <%= eachState.state %>
            </div>
            <div class="card-body">
              <div class="text-dark row text">
                <div class="card border-button col-sm-12">
                  <span class="card-text text-primary ma-5">
                    <%= eachState.confirmedCases %> </span
                  ><span class="card-title ma-5">Confirmed</span>
                </div>
                <div class="card border-button col-sm-12">
                  <span class="card-text text-warning ma-5">
                    <%= eachState.casesOnAdmission %> </span
                  ><span class="card-title ma-5">Active</span>
                </div>
                <div class="card border-button col-sm-12">
                  <span class="card-text text-success ma-5">
                    <%= eachState.discharged %> </span
                  ><span class="card-title ma-5">Recovered</span>
                </div>
                <div class="card border-button col-sm-12">
                  <span class="card-text text-danger ma-5">
                    <%= eachState.death %> </span
                  ><span class="card-title ma-5">Death</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </section>
    </main>

    <footer class="text-center mt-5 mb-0 bg-dark jumbotron jumbotron-fluid">
      <div class="container text-white">
        <span class="float-center">
          Build with ðŸ’“ by
          <a
            href="https://twitter.com/IrolehVincent"
            class="text-decoration-none text-success"
            >Iroleh</a
          >
        </span>

        <span class="float-right">
          <a href="#home">
            <i class="fa fa-arrow-up text-success"></i>
          </a>
        </span>
      </div>
    </footer>
  </body>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.bundle.min.js"></script>
  <script src="js/main.js"></script>
</html>
